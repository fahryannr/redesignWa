<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statuss">

    <ScrollView
        android:id="@+id/rih8vvgi7ell"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF000000"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/r1ijbncsi0ih_rl"
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <ImageView
                    android:id="@+id/r1ijbncsi0ih"
                    android:layout_width="match_parent"
                    android:layout_height="6400dp"
                    android:src="@drawable/bg"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rra9mgtgbb2h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="#FF0A1C27"
                        android:paddingVertical="4dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:layout_marginBottom="550dp">

                        <ImageView
                            android:id="@+id/ivkembali"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/kiri"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/rhe2tao4h1ad"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/fopro"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/syarifa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Syarifa"
                            android:textColor="#FFFFFF"
                            android:textSize="19sp" />

                        <ImageView
                            android:id="@+id/vc"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginStart="120dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/vc"
                            android:scaleType="fitCenter" />

                        <ImageView
                            android:id="@+id/call"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/phone"
                            android:scaleType="fitCenter" />

                        <ImageView
                            android:id="@+id/titiktiga"
                            android:layout_width="38dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="-8dp"
                            android:src="@drawable/titiktiga"
                            android:scaleType="fitCenter" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <!-- Moved TextInputEditText here to ensure it's visible -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- ImageView for emoji -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/emoji"/>

                <!-- TextInputEditText -->
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Ketik pesan"
                    android:textColor="#A39B9B"
                    android:textColorHint="#A39B9B"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:inputType="text"
                    android:layout_width="0dp"/>


                <!-- ImageView for vn -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/vn"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

